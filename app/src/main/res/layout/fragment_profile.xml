<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <TextView
        android:id="@+id/tv_profile_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보 수정"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DBDBDB"
        android:layout_marginTop="16dp"/>

    <!--여기까지 실습-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_home_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_sample"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="14dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_circle_color"
        app:layout_constraintTop_toTopOf="@id/siv_home_profile"
        app:layout_constraintStart_toStartOf="@id/siv_home_profile"
        app:layout_constraintBottom_toBottomOf="@id/siv_home_profile"
        app:layout_constraintEnd_toEndOf="@id/siv_home_profile"/>

    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kuit.official"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/siv_home_profile"
        app:layout_constraintStart_toEndOf="@id/siv_home_profile"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/tv_home_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 추가..."
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_home_name"
        app:layout_constraintBottom_toBottomOf="@id/siv_home_profile"/>

    <ImageView
        android:id="@+id/iv_home_post_img"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/img_sample2"
        app:layout_constraintTop_toBottomOf="@id/siv_home_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_profile_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like_empty"
        app:layout_constraintStart_toStartOf="@id/iv_home_post_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_post_img"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사람 태그"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_tag"
        app:layout_constraintStart_toEndOf="@id/iv_profile_tag"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대체 텍스트 수정"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_tag"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="14dp"/>

    <TextView
        android:id="@+id/tv_home_post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠잇 3기 시작합니다!! 다들 열심히 한.."
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_home_post_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>